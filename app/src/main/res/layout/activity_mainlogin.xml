<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.dayer.myapplication.MainloginActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/side_nav_bar"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="410dp"
            android:layout_height="360dp"
            android:src="@drawable/logoentra" />

        <EditText
            android:id="@+id/etadmin"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="20dp"
            android:drawableLeft="@drawable/ic_person_outline_black_24dp"
            android:ems="10"
            android:hint="  Administrador"
            android:inputType="textEmailAddress"
            android:maxLines="1"
            android:textSize="20dp"
            android:textStyle="italic" />

        <EditText
            android:id="@+id/etcontra"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="20dp"
            android:drawableLeft="@drawable/ic_https_black_24dp"
            android:ems="10"
            android:hint=" **********"
            android:inputType="textPassword"
            android:maxLines="1"
            android:textSize="20dp" />

        <Button
            android:id="@+id/btningresar"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:background="@drawable/ic_login"
            android:text="Ingresar"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:textStyle="italic" />

        <Button
            android:id="@+id/btnregistrar"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:background="@drawable/ic_login"
            android:text="Registrar"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:textStyle="italic" />
    </LinearLayout>


</android.support.constraint.ConstraintLayout>
